<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <% include ClientApp/ejs/index_2/public/headerTag.ejs %>
  </head>
  <body class="body">
    <%- include ClientApp/ejs/index_2/public/style.ejs %>
    <%if (htmlWebpackPlugin.options.outputFile.isProd) {%> <% for (var css in
    htmlWebpackPlugin.files.css) { %>
    <link
      href="wwwroot/webpackTest<%= htmlWebpackPlugin.files.css[css] %>"
      rel="stylesheet"
    />
    <% } %> <% } %>

    <%- include ClientApp/ejs/index_2/public/header.ejs %>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link href="wwwroot/vendor/select2-bootstrap4-theme-master/dist/select2-bootstrap4.min.css" rel="stylesheet" />

    <style>

    </style>

    <section class="memberCE">
      <div class="container">
        <div class="row">
          <div class="col-12 mb-4">
            <h2 class="text-center fz-25x mb-4 title font-weight-bold">會員資料建立</h2>
          </div>
          <div class="col-md-3 mb-5">
            <div class="avatar-upload">
                <div class="avatar-edit">
                    <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" />
                    <label for="imageUpload">
                      <i class="fas fa-pencil-alt"></i> 
                    </label>
                </div>
                <div class="avatar-preview">
                    <div id="imagePreview" style="background-image: url(https://picsum.photos/100/100?image=1027);">
                    </div>
                </div>
            </div>
          </div>
          <div class="col-md-9">
            <form>
              <div class="form-group row">
                <label for="userName" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>姓名</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control is-invalid" id="userName" name="userName" placeholder="姓名">
                  <small id="userNameHelp" class="form-text text-red">為必填寫</small>
                </div>
              </div>
              <div class="form-group row">
                <label for="kana" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>假名</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control is-invalid" id="kana" name="kana" placeholder="假名">
                  <small id="kanaHelp" class="form-text text-red">為必填寫</small>
                </div>
              </div>
              <!-- <div class="form-group row">
                <label for="kana" class="col-sm-2 text-sm-right col-form-label">性別</label>
                <div class="col-sm-10 align-self-center">
                  <div class="custom-control custom-radio custom-control-inline">
                      <input type="radio" id="sexBoy" name="sex" class="custom-control-input">
                      <label class="custom-control-label" for="sexBoy">男生</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                      <input type="radio" id="sexGirl" name="sex" class="custom-control-input">
                      <label class="custom-control-label" for="sexGirl">女生</label>
                    </div>
                </div>
              </div> -->
              <div class="form-group row">
                <label for="" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>生日</label>
                <div class="col-sm-10 form-row align-items-center">
                  <div class="col-auto">
                    <select class="custom-select my-1 mr-sm-2" id="year" name="year">
                      <option value="1992">1992</option>
                      <option value="1993">1993</option>
                      <option value="1994">1994</option>
                    </select>
                  </div>
                  <div class="col-auto">
                      <select class="custom-select my-1 mr-sm-2" id="month" name="month">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                      </select>
                  </div>
                  <div class="col-auto">
                      <select class="custom-select my-1 mr-sm-2" id="day" name="day">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                      </select>
                  </div>
                </div>
              </div>
              <div class="form-group row">
                <label for="area" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>地區</label>
                <div class="col-sm-10">
                  <select class="custom-select my-1 mr-sm-2" id="area" name="area">
                    <option value="TW">台灣</option>
                    <option value="US">美國</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label for="language" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>語言</label>
                <div class="col-sm-10">
                  <select class="custom-select my-1 mr-sm-2 js-example-basic-multiple-limit" id="language" name="language" multiple="multiple">
                    <option value="">中文</option>
                    <option value="">英語</option>
                    <option value="">越南話</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label for="career" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>職業</label>
                <div class="col-sm-10">
                  <select class="custom-select my-1 mr-sm-2" id="career" name="career">
                    <option value="TW">台灣</option>
                    <option value="US">美國</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label for="interest" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>興趣</label>
                <div class="col-sm-10 form-inline">
                  <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="interest" name="interestGroup">
                    <label class="custom-control-label" for="interest">戶外運動</label>
                  </div>
                  <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="interest2" name="interestGroup">
                    <label class="custom-control-label" for="interest2">戶外運動</label>
                  </div>
                  <input type="text" class="form-control ml-2" id="interestOther" name="interestOther" placeholder="其他">                    
                </div>
              </div>
              <div class="form-group row">
                  <label for="kana" class="col-sm-2 text-sm-right col-form-label"><span class="text-red">*</span>經歷&nbsp;</label>
                  <div class="col-sm-10">
                    <textarea type="text" class="form-control is-invalid" id="kana" name="kana" placeholder="假名" rows="5" placeholder="不限字數"></textarea>
                    <small id="kanaHelp" class="form-text text-red">為必填寫</small>
                  </div>
                </div>
            </form>
          </div>
          <div class="col-12 form-inline">
              <button type="submit" class="btn d-block mx-auto mt-4 btn-lg col-4 cbBtn">送出</button>
              <a href="#" class="btn d-block mx-auto mt-4 btn-lg col-4 btn btn-secondary">取消</a>
          </div>
        </div>
      </div>
    </section>
   


    <%- include ClientApp/ejs/index_2/public/footer.ejs %>
    <%- include ClientApp/ejs/index_2/public/script.ejs %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script> 
    <script>
      (function(){
        $.fn.select2.defaults.set( "theme", "bootstrap4" );
      })()
    </script>
    <script>
      (function(){
        $(".js-example-basic-multiple-limit").select2({
          maximumSelectionLength: 3,
          allowClear: true,
        });
      })()
    </script>
    <script>
      (function(){
        function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#imagePreview').css('background-image', 'url('+e.target.result +')');
                $('#imagePreview').hide();
                $('#imagePreview').fadeIn(650);
            }
            reader.readAsDataURL(input.files[0]);
        }
      }
      $("#imageUpload").change(function() {
        readURL(this);
      });
      })()
    </script>

    <script src="<%= htmlWebpackPlugin.options.outputFile.vendor %>"></script>

    <%if (htmlWebpackPlugin.options.outputFile.isProd) {%> <% for (var chunk in
    htmlWebpackPlugin.files.chunks) { %>
    <script src="wwwroot/webpackTest<%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
    <% } %> <%} else {%> <% for (var chunk in htmlWebpackPlugin.files.chunks) {
    %>
    <script src="http://localhost:<%= htmlWebpackPlugin.options.outputFile.port %><%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
    <% } %> <% } %>
    
  </body>
</html>


