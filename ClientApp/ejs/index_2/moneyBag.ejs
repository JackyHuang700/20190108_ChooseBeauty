<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <% include ClientApp/ejs/index_2/public/headerTag.ejs %>
  </head>
  <body class="body">
    <%- include ClientApp/ejs/index_2/public/style.ejs %>
    <%if (htmlWebpackPlugin.options.outputFile.isProd) {%> <% for (var css in
    htmlWebpackPlugin.files.css) { %>
    <link
      href="wwwroot/webpackTest<%= htmlWebpackPlugin.files.css[css] %>"
      rel="stylesheet"
    />
    <% } %> <% } %>

    <%- include ClientApp/ejs/index_2/public/header.ejs %>

    <link
    rel="stylesheet"
    href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
    <style>
        #example_length {
          display: none;
        }
  
        /* #example thead, */
        #example tfoot {
          display: none;
        }

        #example thead{
          background-color: #eeb118;
          text-align: center;
        }
      </style>

    <section class="moneyBag">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center fz-25x mb-4">我的錢包</div>
          <%- include ClientApp/ejs/index_2/public/account.ejs %>
          <div class="col-md-8">
            <div class="points">
              <div class="text-center fz-21x">我的點數</div>
              <div class="mb-5x d-flex justify-content-between align-items-center">
                <div>
                  點數: <span class="cbColor">1000</span>點
                </div>
                <a class="fill" href="#">充值</a> 
              </div>
              <div>
                <span class="text-red">1</span>&nbsp;新台幣相當於&nbsp;<span class="text-red">1</span>&nbsp;點
              </div>
            </div>
            <div class="pointsConver">
              <div class="text-center fz-21x">點數換算</div>
              <div class="pointsConverArea">
                <div class="icon" data-toggle="modal" data-target="#exampleModal">
                  <span class="img">
                    <img src="https://picsum.photos/100/100?image=1040" alt="">
                  </span>
                  <span class="name mt-1">來親幾哩</span>
                  <span class="point mt-1">50</span>
                </div>
                
              </div>
            </div>
            <div class="record">
              <div class="text-center fz-21x">使用紀錄</div>
              <div>
                  <table id="example" class="table table-striped table-bordered" style="width:100%">
                  <thead>
                    <tr>
                      <th class="o-5">時間</th>
                      <th class="o-5">交易類型</th>
                      <th class="o-5">數量</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>2019-01-16</td>
                      <td>支付寶</td>
                      <td>1</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">選擇數量</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              
              <div class="form-group row">
                  <label class="col-sm-2" for="number">數量</label>
                  <div class="col-sm-10">
                    <select class="custom-select" id="number">
                      <option selected value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                    </select>
                </div>
              </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
              <button type="button" class="btn btn-primary col-2 cbBGC cbBorder">確認</button>
            </div>
          </div>
        </div>
      </div>


    <%- include ClientApp/ejs/index_2/public/footer.ejs %>
    <%- include ClientApp/ejs/index_2/public/script.ejs %>

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script>
      $( document ).ready(function() {
        var myMoexampleModaldalDOM =  $('#exampleModal')
        myMoexampleModaldalDOM.on('shown.bs.modal', function (e) {
          console.log('do something...')
        })
        myMoexampleModaldalDOM.on('hidden.bs.modal', function (e) {
          console.log('do something...')
        })

        // dataTable
          $('#example').DataTable({
            searching: false,
            info: false,
            ordering: false,
            language: {
              infoEmpty: '無任何資料',
              paginate: {
                previous: '上一頁',
                next: '下一頁'
              }
            }
          })
      });
     
    </script>

    <script src="<%= htmlWebpackPlugin.options.outputFile.vendor %>"></script>

    <%if (htmlWebpackPlugin.options.outputFile.isProd) {%> <% for (var chunk in
    htmlWebpackPlugin.files.chunks) { %>
    <script src="wwwroot/webpackTest<%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
    <% } %> <%} else {%> <% for (var chunk in htmlWebpackPlugin.files.chunks) {
    %>
    <script src="http://localhost:<%= htmlWebpackPlugin.options.outputFile.port %><%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
    <% } %> <% } %>
    
  </body>
</html>


